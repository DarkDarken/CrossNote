<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/backgroundadd">

    <include
        layout="@layout/action_toolbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="68dp"
        android:textColor="@color/textColor"
        android:textSize="20pt"
        android:textStyle="bold"
        android:text="Add training" />


    <Spinner
        android:id="@+id/typeWodSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="50dp"
        style="@style/spinner_style"
        android:backgroundTint="@color/textColor"
        android:textAlignment="center" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/typeWodSpinner"
        android:layout_centerVertical="true"
        android:layout_marginTop="50dp"
        android:textColor="@color/textColor"
        android:textColorHint="#59ffffff">

        <EditText
            android:id="@+id/setTimeEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"

            android:textSize="12pt"
            android:inputType="number"
            android:textAlignment="center"
            android:textColor="@color/textColor"
            android:textColorHint="#59ffffff" />

    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/add_expense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="19dp"
        android:layout_marginRight="19dp"
        android:clickable="true"
        app:srcCompat="@drawable/ic_add" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/add_expense"
        android:layout_toStartOf="@+id/textView2"
        android:layout_weight="1"
        android:clickable="true"
        android:onClick="showDatePickerDialog"
        app:srcCompat="@drawable/ic_date" />

    <TextView
        android:id="@+id/dataText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/floatingActionButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:paddingHorizontal="@dimen/top_margin"
        android:text="ttd"
        android:textColor="@color/textColor"
        android:textSize="6pt" />


</RelativeLayout>
